---
import { CollectionEntry, getCollection } from "astro:content";

const filters = await getCollection("filters");

const { filter: currentFilterSlug } = Astro.params;
---

<nav class="filters">
	<ul class="filters_list">
		{
			filters.map((filter) => (
				<li class="filters_item">
					<a
						class:list={[
							"filters_link button",
							{ "is-active": filter.slug === currentFilterSlug },
						]}
						data-tippy="Will replace <code>#teasers</code>"
						href={`/characters/${filter.slug}`}
					>
						{filter.data.name}
					</a>
				</li>
			))
		}
	</ul>
</nav>
