---
import Base from '../components/Base.astro';
import Teasers from "../components/Teasers.astro";
import Filters from "../components/Filters.astro";


const { name } = Astro.props;
const description = `${name} is a character in the Super Mario universe`;
---

<Base title={`Detail: ${name}`} description={description}>
	<slot />
	<div id="characters-list" data-swup-fragment-url="/characters/">
		<Filters />
		<Teasers />
	</div>
</Base>
